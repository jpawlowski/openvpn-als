<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC
	"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<display-name>Adito</display-name>

	<filter>
		<filter-name>compressionFilter</filter-name>
		<filter-class>
			com.adito.core.filters.CompressionFilter
		</filter-class>
		<init-param>
			<param-name>compressionThreshold</param-name>
			<param-value>10</param-value>
		</init-param>
	</filter>

	<filter-mapping>
    		<filter-name>compressionFilter</filter-name>
    		<servlet-name>action</servlet-name>
   	</filter-mapping> 
	<filter-mapping>
    		<filter-name>compressionFilter</filter-name>
    		<servlet-name>messageResourceLoader</servlet-name>
   	</filter-mapping>  
	<filter-mapping>
    		<filter-name>compressionFilter</filter-name>
    		<servlet-name>staticResourceServlet</servlet-name>
   	</filter-mapping> 
	  
	<!-- Standard Action Servlet Configuration (with debugging) -->
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>com.adito.core.CoreServlet</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/struts-config.xml</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>2</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	  
	<!-- Static Resource Servlet (the default) -->
	<servlet>
		<servlet-name>staticResourceServlet</servlet-name>
		<servlet-class>com.adito.core.StaticResourceServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>store</servlet-name>
		<servlet-class>
			com.adito.vfs.webdav.DAVServlet
		</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>messageResourceLoader</servlet-name>
		<servlet-class>
			com.adito.core.MessageResourceLoaderServlet
		</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<!-- Standard Action Servlet Mapping -->
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>store</servlet-name>
		<url-pattern>/fs/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>messageResourceLoader</servlet-name>
		<url-pattern>/loadMessageResources/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>staticResourceServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

