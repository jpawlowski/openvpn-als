<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "struts-config_1_1.dtd">
<struts-config>
	<form-beans>

		<!-- Web Forwards -->
		<form-bean name="webForwardsForm"
			type="net.openvpn.als.webforwards.forms.WebForwardsForm">
		</form-bean>
		<form-bean name="webForwardForm"
			type="net.openvpn.als.webforwards.forms.WebForwardForm">
		</form-bean>

		<!--  web forward wizard forms -->
		<form-bean name="webForwardTypeSelectionForm" type="net.openvpn.als.webforwards.webforwardwizard.forms.WebForwardTypeSelectionForm"></form-bean>
		<form-bean name="webForwardResourceDetailsForm" type="net.openvpn.als.webforwards.webforwardwizard.forms.WebForwardResourceDetailsForm"></form-bean>
		<form-bean name="webForwardSpecificDetailsForm" type="net.openvpn.als.webforwards.webforwardwizard.forms.WebForwardSpecificDetailsForm"></form-bean>
		<form-bean name="webForwardAuthenticationDetailsForm" type="net.openvpn.als.webforwards.webforwardwizard.forms.WebForwardAuthenticationDetailsForm"></form-bean>
		<form-bean name="webForwardPolicySelectionForm" type="net.openvpn.als.webforwards.webforwardwizard.forms.WebForwardPolicySelectionForm"></form-bean>
		<form-bean name="webForwardPersonalPolicyForm" type="net.openvpn.als.webforwards.webforwardwizard.forms.WebForwardPersonalPolicyForm"></form-bean>
		<form-bean name="webForwardSummaryForm" type="net.openvpn.als.webforwards.webforwardwizard.forms.WebForwardSummaryForm"></form-bean>
		<form-bean name="webForwardFinishForm" type="net.openvpn.als.webforwards.webforwardwizard.forms.WebForwardFinishForm"></form-bean>

		<!-- Replacments -->
		<form-bean name="replacementsForm"
			type="net.openvpn.als.replacementproxy.forms.ReplacementsForm">
		</form-bean>
		<form-bean name="replacementForm"
			type="net.openvpn.als.replacementproxy.forms.ReplacementForm">
		</form-bean>


	</form-beans>
	<global-exceptions />
	<global-forwards />
	<action-mappings>

		<!--  Web Forwards -->
		<action path="/showWebForwards"
			type="net.openvpn.als.webforwards.actions.ShowWebForwardsAction"
			name="webForwardsForm" parameter="actionTarget" scope="session">
			<forward name="display" path=".site.WebForwards" />
			<forward name="edit" path="/editWebForward.do" />
			<forward name="clone" path="/editWebForward.do" />
			<forward name="confirmRemove" path="/removeWebForward.do" />
			<forward name="refresh" path="/showWebForwards.do"
				redirect="true" />
		</action>

		<action path="/showUserWebForwards"
			type="net.openvpn.als.webforwards.actions.ShowWebForwardsAction"
			name="webForwardsForm" parameter="actionTarget" scope="session">
			<forward name="display" path=".site.UserWebForwards" />
			<forward name="edit" path="/editUserWebForward.do" />
			<forward name="confirmRemove" path="/removeUserWebForward.do" />
			<forward name="refresh" path="/showUserWebForwards.do"
				redirect="true" />
		</action>

		<action path="/removeWebForward" name="confirmForm"
			parameter="question,true,webForwards,removeWebForward,yes=/showWebForwards.do?actionTarget=remove,no=/showWebForwards.do?actionTarget=unspecified"
			scope="request"
			type="net.openvpn.als.navigation.actions.ConfirmAction">
			<forward name="success" path=".site.Confirm" />
		</action>
		
		<action path="/removeUserWebForward" name="confirmForm"
			parameter="question,true,webForwards,removeWebForward,yes=/showUserWebForwards.do?actionTarget=remove,no=/showUserWebForwards.do?actionTarget=unspecified"
			scope="request"
			type="net.openvpn.als.navigation.actions.ConfirmAction">
			<forward name="success" path=".site.Confirm" />
		</action>

		<action path="/editWebForward" name="webForwardForm"
			scope="session" validate="true" parameter="actionTarget"
			input=".site.EditWebForward"
			type="net.openvpn.als.webforwards.actions.EditWebForwardAction">
			<forward name="display" path=".site.EditWebForward" />
			<forward name="done" path="/showWebForwards.do?actionTarget=unspecified" redirect="false"/>
		</action>
		
		<action path="/editUserWebForward" name="webForwardForm"
			scope="session" validate="true" parameter="actionTarget"
			input=".site.UserEditWebForward"
			type="net.openvpn.als.webforwards.actions.EditWebForwardAction">
			<forward name="display" path=".site.UserEditWebForward" />
			<forward name="done" path="/showUserWebForwards.do?actionTarget=unspecified" redirect="false"/>
		</action>

		<!--  Web Forward resource Wizard -->
		<action path="/webForwardTypeSelection" name="webForwardTypeSelectionForm" scope="session" type="net.openvpn.als.webforwards.webforwardwizard.actions.WebForwardTypeSelectionAction" parameter="actionTarget" validate="true" input=".site.WebForwardWizardPage">
			<forward name="finish" path="/webForwardFinish.do" redirect="true" />
			<forward name="display" path=".site.WebForwardWizardPage" />
			<forward name="next" path="/webForwardResourceDetails.do" redirect="true" />
		</action>
		<action path="/webForwardResourceDetails" name="webForwardResourceDetailsForm" scope="session" type="net.openvpn.als.webforwards.webforwardwizard.actions.WebForwardResourceDetailsAction" parameter="actionTarget" validate="true" input=".site.WebForwardWizardPage">
			<forward name="finish" path="/webForwardFinish.do" redirect="true" />
			<forward name="display" path=".site.WebForwardWizardPage" />
			<forward name="previous" path="/webForwardTypeSelection.do" redirect="true" />
			<forward name="next" path="/webForwardSpecificDetails.do" redirect="true" />
		</action>
		<action path="/webForwardSpecificDetails" name="webForwardSpecificDetailsForm" scope="session" type="net.openvpn.als.webforwards.webforwardwizard.actions.WebForwardSpecificDetailsAction" parameter="actionTarget" validate="true" input=".site.WebForwardWizardPage">
			<forward name="finish" path="/webForwardFinish.do" redirect="true" />
			<forward name="display" path=".site.WebForwardWizardPage" />
			<forward name="previous" path="/webForwardResourceDetails.do" redirect="true" />
			<forward name="next" path="/webForwardAuthenticationDetails.do" redirect="true" />
			<forward name="nextSkipAuthentication" path="/webForwardPolicySelection.do" redirect="true" />
			<forward name="nextPersonal" path="/webForwardPersonalPolicy.do" redirect="true" />
		</action>
		<action path="/webForwardAuthenticationDetails" name="webForwardAuthenticationDetailsForm" scope="session" type="net.openvpn.als.webforwards.webforwardwizard.actions.WebForwardAuthenticationDetailsAction" parameter="actionTarget" validate="true" input=".site.WebForwardWizardPage">
			<forward name="finish" path="/webForwardFinish.do" redirect="true" />
			<forward name="display" path=".site.WebForwardWizardPage" />
			<forward name="previous" path="/webForwardSpecificDetails.do" redirect="true" />
			<forward name="next" path="/webForwardPolicySelection.do" redirect="true" />
			<forward name="nextPersonal" path="/webForwardPersonalPolicy.do" redirect="true" />
		</action>
		<action path="/webForwardPolicySelection" name="webForwardPolicySelectionForm" scope="session" type="net.openvpn.als.webforwards.webforwardwizard.actions.WebForwardPolicySelectionAction" parameter="actionTarget" validate="true" input=".site.WebForwardWizardPage">
			<forward name="display" path=".site.WebForwardWizardPage" />
			<forward name="previous" path="/webForwardAuthenticationDetails.do" redirect="true" />
			<forward name="previousSkipAuthentication" path="/webForwardSpecificDetails.do" redirect="true" />
			<forward name="next" path="/webForwardSummary.do" redirect="true" />
		</action>
		<action path="/webForwardPersonalPolicy" name="webForwardPersonalPolicyForm" scope="session" type="net.openvpn.als.webforwards.webforwardwizard.actions.WebForwardPersonalPolicyAction" parameter="actionTarget" validate="true" input=".site.WebForwardWizardPage">
			<forward name="display" path=".site.WebForwardWizardPage" />
			<forward name="previous" path="/webForwardAuthenticationDetails.do" redirect="true" />
			<forward name="previousSkipAuthentication" path="/webForwardSpecificDetails.do" redirect="true" />
			<forward name="next" path="/webForwardSummary.do" redirect="true" />
		</action>
		<action path="/webForwardSummary" name="webForwardSummaryForm" scope="session" type="net.openvpn.als.webforwards.webforwardwizard.actions.WebForwardSummaryAction" parameter="actionTarget" validate="true" input=".site.WebForwardWizardPage">
			<forward name="display" path=".site.WebForwardWizardPage" />
			<forward name="previous" path="/webForwardPolicySelection.do" redirect="true" />
			<forward name="previousPersonal" path="/webForwardPersonalPolicy.do" redirect="true" />
		</action>
		<action path="/webForwardFinish" name="webForwardFinishForm" scope="session" type="net.openvpn.als.webforwards.webforwardwizard.actions.WebForwardFinishAction" parameter="actionTarget" validate="true" input=".site.WebForwardWizardPage">
			<forward name="display" path=".site.WebForwardWizardPage" />
			<forward name="rerun" path="/webForwardSpecificDetails.do" redirect="true" />
		</action>	

		<!-- Replacement proxy -->

		<action path="/launchReplacementProxy"
			type="net.openvpn.als.replacementproxy.actions.LaunchReplacementProxyAction" />

		<action path="/getURLMultipartForm" parameter="multipartForm"
			type="net.openvpn.als.replacementproxy.actions.GetURLAction" />


		<!--  Replacements action -->
		<action path="/showReplacements" parameter="actionTarget"
			type="net.openvpn.als.replacementproxy.actions.ReplacementsDispatchAction"
			name="replacementsForm" validate="true" scope="session"
			input=".site.Replacements">
			<forward name="success" path=".site.Replacements" />
			<forward name="display" path="/showReplacements.do"
				redirect="true" />
			<forward name="create" path="/createReplacement.do" />
			<forward name="edit" path="/editReplacement.do" />
		</action>

		<action path="/editReplacement" parameter="actionTarget"
			type="net.openvpn.als.replacementproxy.actions.ReplacementDispatchAction"
			name="replacementForm" validate="true" scope="session"
			input=".site.EditReplacement">
			<forward name="success" path="/showReplacements.do"
				redirect="true" />
			<forward name="display" path=".site.EditReplacement" />
		</action>

		<action path="/createReplacement" parameter="actionTarget"
			type="net.openvpn.als.replacementproxy.actions.ReplacementDispatchAction"
			name="replacementForm" validate="true" scope="session"
			input=".site.CreateReplacement">
			<forward name="success" path="/showReplacements.do"
				redirect="true" />
			<forward name="display" path=".site.CreateReplacement" />
		</action>

		<action path="/removeReplacement" name="confirmForm"
			parameter="question,true,services,removeReplacement,yes=/showReplacements.do?actionTarget=remove,no=/showReplacements.do"
			scope="request"
			type="net.openvpn.als.navigation.actions.ConfirmAction">
			<forward name="success" path=".site.Confirm" />
		</action>



	</action-mappings>
	<!-- ================================ Message Definitions -->
	<message-resources parameter="net.openvpn.als.webforwards.ApplicationResources" key="webForwards" />

</struts-config>
